{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"ext": "readonly",
		"OOJSPlus": "readonly",
		"ve": "readonly"
	},
	"rules": {
		"es-x/no-async-functions": "off",
		"max-len": "off",
		"no-jquery/no-global-selector": "off",
		"no-prototype-builtins": "off",
		"no-jquery/no-done-fail": "warn"
	},
	"parserOptions": {
		"ecmaVersion": 8
	}
}
